<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETickets.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/images/logo.png"/>
                <a class="navbar-brand" asp-area="" asp-controller="Movie" asp-action="Index">ETickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
              
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cinema" asp-action="Index">Cinema</a>
                        </li>
                       <a asp-action="Index" asp-controller="Cart"> <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                        </svg>
                        </a>
                       
                        @* v *@
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li> Welcome, @User.Identity.Name </li>
                            <li>  <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a> </li>

                            if (User.IsInRole("Admin"))
                            {

                                <li>
                                    <a class="nav-link text-dark" asp-action="ManageMovies" asp-controller="Movie">Manage Products</a>
                                </li>
                                <li>

                                    <a class="nav-link text-dark" asp-action="Index" asp-controller="Category">Manage Categories</a>
                                </li>
                            }
                        }       
                       
                        else
                        {
                            <li>  <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a> </li>

                        }
                        
                        </ul>                        
                    <form asp-action="SearchByName" asp-controller="Movie" class="row g-3 align-items-center">
                        <div class="col-auto">
                            <input class="form-control" type="text" id="lname" Name="Name" value="">
                        </div>
                    
                        <div class="col-auto">
                            <input class="btn btn-outline-success" type="submit" value="search">
                       
                        </div>
                    </form>

                </div>
            </div>
                    
        </nav>
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ETickets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
