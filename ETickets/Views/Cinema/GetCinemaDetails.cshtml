@model Cinema


<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/images/cinema.jpg" class="img-fluid rounded-start" alt="@Model.Name">
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h1 class="card-title"> @Model.Name</h1>
            </div>
            <div class="card-body">
                @Model.Description
            </div>
            <div class="card-body">
              Address :  @Model.Address
            </div> 
            

</div>
</div>
    </div>

